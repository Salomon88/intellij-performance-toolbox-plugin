<idea-plugin>
    <id>org.GcViewer</id>
    <name>GCViewer</name>
    <vendor email="slamosha@yandex.ru">xCompany</vendor>

    <description>Simple proxy for http://github.com/chewiebug/GCViewer</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable  instance="prefs.GCViewerApplicationSettings"/>
    </extensions>

    <actions>
        <action id="OpenGCFileAction" class="actions.OpenGCFileAction" text="_Garbage Collector Log...">
            <add-to-group group-id="AnalyzePlatformMenu"/>
            <add-to-group group-id="InspectCodeGroup"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.github.gcviewerplugin.PreferencesComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>