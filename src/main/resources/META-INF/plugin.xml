<idea-plugin>
    <id>org.memorytoolbox</id>
    <name>Memory Toolbox</name>
    <vendor email="slamosha@yandex.ru">xCompany</vendor>

    <description><![CDATA[
        <p>This plugin introduces tools that help you to analyze and troubleshoot various memory related issues in JVM applications without leaving the IDE.</p>
        <br>
        <p><b>Features:</b><br>
        <ul>
            <li>Embedded well-known and all-loved <a href="https://github.com/chewiebug/GCViewer">GCViewer</a> (<b>v1.36</b>) that visualizes verbose GC output generated by Sun / Oracle, IBM, HP and BEA Java Virtual Machines.</li>
        </ul>
]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable  instance="org.memorytoolbox.intellij.plugin.common.settings.GCViewerApplicationSettings"/>
    </extensions>

    <actions>
        <action id="OpenGCFileAction" class="org.memorytoolbox.intellij.plugin.common.actions.OpenGCFileAction" text="_Garbage Collector Log...">
            <add-to-group group-id="AnalyzePlatformMenu"/>
            <add-to-group group-id="InspectCodeGroup"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>org.memorytoolbox.intellij.plugin.gcviewer.PreferencesComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>